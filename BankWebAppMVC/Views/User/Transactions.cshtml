@model List<BankWebAppMVC.Models.Transactions>
@{
    ViewData["Title"] = "Transactions";
}
<h2>Transactions</h2>

<form method="get" class="row g-3 mb-3">
    <div class="col-md-3">
        <input type="date" name="fromDate" value="@ViewBag.FromDate" class="form-control" />
    </div>
    <div class="col-md-3">
        <input type="date" name="toDate" value="@ViewBag.ToDate" class="form-control" />
    </div>
    <div class="col-md-3">
        <button type="submit" class="btn btn-primary">Filter</button>
    </div>
</form>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Date</th>
            <th>Account</th>
            <th>Type</th>
            <th>Amount</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.Date.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@t.AccountNumber</td>
                <td>@t.TransactionType</td>
                <td>@t.Amount:C</td>
                <td>@t.Description</td>
            </tr>
        }
    </tbody>
</table>
