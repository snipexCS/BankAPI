@model BankAppMVC.Models.AccountModel

<h2>Account Details</h2>

<div>
    <strong>Account Number:</strong> @Model.AccountNumber
</div>
<div>
    <strong>User ID:</strong> @Model.UserId
</div>
<div>
    <strong>Balance:</strong> @Model.Balance
</div>

<a asp-action="Edit" asp-route-id="@Model.AccountNumber" class="btn btn-primary">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back</a>
