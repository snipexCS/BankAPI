@model BankAppMVC.Models.MoneyTransferModel

<h2>Money Transfer</h2>

<form asp-action="Transfer" method="post">
    <div>
        <label>From Account:</label>
        <select asp-for="FromAccountNumber" asp-items="@(new SelectList(ViewBag.Accounts, "AccountNumber", "AccountNumber"))"></select>
    </div>

    <div>
        <label>To Account Number:</label>
        <input asp-for="ToAccountNumber" type="number" required />
    </div>

    <div>
        <label>Amount:</label>
        <input asp-for="Amount" type="number" step="0.01" required />
    </div>

    <div>
        <label>Description:</label>
        <input asp-for="Description" />
    </div>

    <button type="submit">Transfer</button>
</form>

@if (TempData["Success"] != null)
{
    <p style="color:green">@TempData["Success"]</p>
}
