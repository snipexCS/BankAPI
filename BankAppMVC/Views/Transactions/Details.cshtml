@model BankAppMVC.Models.TransactionModel

<h2>Transaction Details</h2>

<div>
    <strong>Transaction ID:</strong> @Model.TransactionId
</div>
<div>
    <strong>Account Number:</strong> @Model.AccountNumber
</div>
<div>
    <strong>Type:</strong> @Model.Type
</div>
<div>
    <strong>Amount:</strong> @Model.Amount
</div>
<div>
    <strong>Description:</strong> @Model.Description
</div>
<div>
    <strong>Date:</strong> @Model.Date
</div>

<a asp-action="Edit" asp-route-id="@Model.TransactionId" class="btn btn-primary">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back</a>
