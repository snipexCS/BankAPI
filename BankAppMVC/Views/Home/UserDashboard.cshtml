@{
    var user = ViewBag.CurrentUser as BankAppMVC.Models.UserModel;
    var accounts = ViewBag.Accounts as List<BankAppMVC.Models.AccountModel>;
    var transactions = ViewBag.Transactions as List<BankAppMVC.Models.TransactionModel>;
}

<h2>User Dashboard</h2>

<h3>User Info</h3>
<p>Name: @user?.Name</p>
<p>Email: @user?.Email</p>
<p>Phone: @user?.Phone</p>

<h3>Accounts</h3>
<table>
    <tr>
        <th>Account Number</th>
        <th>Balance</th>
    </tr>
    @foreach (var acc in accounts ?? new List<BankAppMVC.Models.AccountModel>())
    {
        <tr>
            <td>@acc.AccountNumber</td>
            <td>@acc.Balance</td>
        </tr>
    }
</table>

<h3>Transactions</h3>
<table>
    <tr>
        <th>Date</th>
        <th>Type</th>
        <th>Amount</th>
    </tr>
    @foreach (var t in transactions ?? new List<BankAppMVC.Models.TransactionModel>())
    {
        <tr>
            <td>@t.Date.ToString("yyyy-MM-dd")</td>
            <td>@t.Type</td>
            <td>@t.Amount</td>
        </tr>
    }
</table>
